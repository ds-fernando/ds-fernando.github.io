<div class="header-with-button">
  <h1 class="is-size-3">Artículos recientes</h1>
  <a href="{{ pathPrefix }}blog/articulos" class="button">Ver todos</a>
</div>
<ul class="article-list">
  {% for post in collections.posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
  {% else %}
    <li>No hay artículos recientes disponibles.</li>
  {% endfor %}
</ul>


